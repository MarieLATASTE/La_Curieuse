{% extends "base.html.twig" %}

{% block body %}
    <h1>{{ title }}</h1>
    <h2>{{ subtitle }}...</h2>

    <section class="category">
        {% for category in category %}
          <article>
                <h2>{{ category.designation}}</h2>
                <div class="shadow p-3 mb-5 bg-white">
                    <div class="content">
                        <img src="{{ category.image }}" class="d-block mx-auto" width="250" alt="illustration">
                        <h4>{{ category.description }}</h4>
                    </div>
                </div>
            </article>
        {% endfor %}

    </section>

{% endblock %}
